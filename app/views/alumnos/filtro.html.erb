<div style="margin-bottom: 10px; margin-top: 10px;">
  <p class="label label-warning"></p><%= notice %></p>
</div>
 









                <div class="row mt">
                  <div class="col-md-12">
                      <div class="content-panel">
                          <table class="table table-striped table-advance table-hover">
                            <div style="width: 600px;">
                            <h4 style="float: left;"><i class="fa fa-angle-right"></i> Búsqueda de Alumnos por Salón</h4>
                            </div>
                            
                            	<div class="alert alert-warning" style="margin-left: 550px; text-align: center; margin-right: 50px">
									<p>Seleccione el grado y grupo para filtrar el resultado de alumnos inscritos:</p>
									<%= form_tag({:controller => "alumnos", :action => "filtro"}, :method => :get) do %>
									<%=label_tag "Grado:"%>
									<%=  select_tag :grado,options_for_select([ "1", "2", "3","4","5","6"],"1")  %>
									<%=label_tag "Grupo:"%>
									<%=  select_tag :grupo,options_for_select([ "A", "B", "C","D"],"A")  %>
									<%= submit_tag "Filtrar", :class=>"btn btn-primary btn-sm"%>
									<% end %>
								</div>

                            

                            <hr style="clear: left;">
                              <thead>
                              <tr>
                                  <th><i class=" fa fa-edit"></i> Nombre</th>
                                  <th><i class=" fa fa-edit"></i> Apellido Paterno</th>
                                  <th><i class=" fa fa-edit"></i> Apellido Materno</th>
                                  <th><i class=" fa fa-edit"></i> CURP</th>
                                  <th><i class=" fa fa-edit"></i> Grado</th>
                                  <th><i class=" fa fa-edit"></i> Grupo</th>

                                  <th></th>
                              </tr>
                              </thead>
                              <tbody>
                                <% @alumnos.each do |alumno| %>
                              <tr>
                                  <td><%= alumno.nombre %></td>
                                  <td><%= alumno.ap_paterno %></td>
                                  <td><%= alumno.ap_materno %></td>
                                  <td><%= alumno.curp %></td>
                                  <td><%= alumno.grado %></td>
                                  <td><%= alumno.grupo %></td>
                                  <td>
                                      <div class="btn btn-success btn-xs"><i class="fa fa-check aria-hidden="true""></i><%= link_to ' Ver', alumno %></div>
                                      <div class="btn btn-primary btn-xs"><i class="fa fa-pencil aria-hidden="true""><%= link_to ' Editar', edit_alumno_path(alumno) %></i></div>
                                      <div class="btn btn-danger btn-xs"><i class="fa fa-trash-o aria-hidden="true""></i><%= link_to ' Eliminar', alumno, method: :delete, data: { confirm: '¿Eliminar elemento seleccionado?' } %></div>
                                  </td>
                              </tr>
                              <% end %>
                              </tbody>
                          </table>
                      </div><!-- /content-panel -->
                  </div><!-- /col-md-12 -->
              </div><!-- /row -->
