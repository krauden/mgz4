
<div style="margin-bottom: 10px; margin-top: 10px;">
  <p class="label label-warning"></p><%= notice %></p>
</div>

  <h4><i class="fa fa-angle-right"></i> Información Completa del Alumno Egresado</h4>

<div class="form-panel">

  <div> <%=image_tag("egresado.png", :size => "180x180", class: "student_icon")%> </div> 
  <h3 class="titulos"><i class="fa fa-user" aria-hidden="true"></i>

  Datos del Alumno Egresado</h3>

  <strong class="formulario_2">Nombre:</strong>
  <%= @egresado.nombre %>
  <%= @egresado.ap_paterno %>
  <%= @egresado.ap_materno %>

  <div>
    <strong class="formulario_2">Sexo:</strong>
    <%= @egresado.sexo %>
    <strong class="formulario3_2">Curp:</strong>
    <%= @egresado.curp %>
  </div>


  <div>
    <strong class="formulario_2">Fecha Nacimiento:</strong>
    <%= @egresado.fecha_nacimiento %>
  </div>



  <h3 class="titulos"><i class="fa fa-user" aria-hidden="true"></i> Datos del Tutor</h3>


  <strong class="formulario_2">Nombre del Tutor:</strong>
  <%= @egresado.nombre_tutor %>
  <%= @egresado.ap_paterno_tutor %>
  <%= @egresado.ap_materno_tutor %>


  <div class="espacio-direccion">
    <strong class="formulario_2">Dirección:</strong>
    <%= @egresado.direccion %>

    <strong class="formulario3_2">Teléfono:</strong>
    <%= @egresado.telefono %>
  </div>
</div>


<div class="botones_show" style="margin-bottom: 235px;">
  
  <%= link_to 'Editar', edit_egresado_path(@egresado),:class=>"btn btn-info" %> 
  <%= link_to 'Regresar', egresados_path ,:class=>"btn btn-warning"%>
</div>


