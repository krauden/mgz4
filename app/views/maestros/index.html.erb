
  
<div style="margin-bottom: 10px; margin-top: 10px;">
  <p class="label label-warning"></p><%= notice %></p>
</div>


<div class="row mt">
                  <div class="col-md-12">
                      <div class="content-panel">
                          <table class="table table-striped table-advance table-hover">
                            <div style="width: 600px;">
                            <h4 style="float: left;"><i class="fa fa-angle-right"></i> Lista General de  Maestros Registrados</h4>
                            </div>
                               <div id="nuevo" style="padding-left: 1000px; "><a href=https://ancient-waters-63761.herokuapp.com/maestros/new/><%=image_tag("adduser.png", :size => "40x40")%></a></div>


                            

                            <hr style="clear: left;">
                              <thead>
                              <tr>
                                  <th><i class=" fa fa-edit"></i> Nombre</th>
                                  <th><i class=" fa fa-edit"></i> Apellido Paterno</th>
                                  <th><i class=" fa fa-edit"></i> Apellido Materno</th>
                                  <th><i class=" fa fa-edit"></i> Grado</th>
                                  <th><i class=" fa fa-edit"></i> Grupo</th>
                                  <th><i class=" fa fa-edit"></i> Teléfono</th>


                                  <th></th>
                              </tr>
                              </thead>
                              <tbody>
                                <% @maestros.each do |maestro| %>
                              <tr>
                                  <td><%= maestro.nombre_m %></td>
                                  <td><%= maestro.ap_paterno_m %></td>
                                  <td><%= maestro.ap_materno_m %></td>
                                  <td><%= maestro.grado_m %></td>
                                  <td><%= maestro.grupo_m %></td>
                                  <td><%= maestro.direccion_m %></td>
                                  <td>
                                      <div class="btn btn-success btn-xs"><i class="fa fa-check aria-hidden="true""></i><%= link_to ' Ver', maestro %></div>
                                      <div class="btn btn-primary btn-xs"><i class="fa fa-pencil aria-hidden="true""><%= link_to ' Editar', edit_maestro_path(maestro) %></i></div>
                                      <div class="btn btn-danger btn-xs"><i class="fa fa-trash-o aria-hidden="true""></i><%= link_to ' Eliminar', maestro, method: :delete, data: { confirm: '¿Eliminar elemento seleccionado?' } %></div>
                                  </td>
                              </tr>
                              <% end %>
                              </tbody>
                          </table>
                      </div><!-- /content-panel -->
                  </div><!-- /col-md-12 -->
              </div><!-- /row -->



