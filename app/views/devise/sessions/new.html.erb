<div class="form-panel" style="width:380px;">
  <div style="margin-bottom:50px;">
    <h4 style="float: left;"><i class="fa fa-angle-right"></i> Inicio de Sesión</h4>
  </div> 
  
  <div style="margin-left:100px; margin-bottom:52px;"><a><%=image_tag("registration.png", :size => "150x150")%></a></div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field" style="margin-bottom: 20px;">
    
    <%= f.email_field :email, autofocus: true, :size=>"45", :placeholder=>"Introduzca su correo de usuario" %>
  </div>

  <div class="field" style="margin-bottom:20px;">
    
    <%= f.password_field :password, autocomplete: "off", :size=>"45", :placeholder=>"Introduzca su contraseña" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field" style="margin-bottom:20px;">
      <%= f.check_box :remember_me %>
      <%= f.label :recordarme %>
    </div>
  <% end -%>

  <div class="actions" style="margin-left:120px;">
    <%= f.submit "Identificarme", :class=>"btn btn-warning" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>


</div>
